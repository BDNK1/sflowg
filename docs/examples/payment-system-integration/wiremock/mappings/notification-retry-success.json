{
  "name": "Notification Service - Success After Retry",
  "scenarioName": "notification-retry",
  "requiredScenarioState": "First-Retry",
  "request": {
    "method": "POST",
    "urlPath": "/notify",
    "headers": {
      "X-Test-Scenario": {
        "equalTo": "notification-failure"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "success": true,
      "message_id": "msg_retry_success",
      "status": "sent",
      "message": "Email sent successfully after retry"
    }
  }
}

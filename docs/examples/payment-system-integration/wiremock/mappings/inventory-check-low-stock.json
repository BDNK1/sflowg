{
  "name": "Inventory Check - Low Stock",
  "priority": 2,
  "request": {
    "method": "GET",
    "urlPath": "/inventory",
    "queryParameters": {
      "item_name": {
        "equalTo": "Limited Item"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "available": true,
      "item_name": "Limited Item",
      "quantity_available": 5,
      "quantity_requested": "{{request.query.quantity}}",
      "warehouse": "MAIN-US-WEST",
      "warning": "Low stock - only 5 units remaining"
    }
  }
}
